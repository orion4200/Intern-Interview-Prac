void sort012(int a[], int n)
    {
        map<int, int> mp; mp.clear();
        
        for(int i=0; i<n; i++)
            mp[a[i]]++ ;
            
        int i=0; 
        while(mp[0]--)
            a[i++] = 0 ;
            
        while(mp[1]--)
            a[i++] = 1 ;
        
        while(mp[2]--)
            a[i++] = 2 ;

    }
